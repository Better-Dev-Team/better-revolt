{
    "name": "better-revolt",
    "version": "1.0.0",
    "type": "module",
    "description": "",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-packager . --overwrite --platform=win32 --arch=x64 --icon=icon.ico --prune=true --out=dist-portable",
        "dist": "electron-builder",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "build": {
        "appId": "com.betterrevolt.app",
        "productName": "Better Revolt",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "forceCodeSigning": false
        },
        "mac": {
            "target": "dmg",
            "icon": "icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "icon.png"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Better-Dev-Team/better-revolt.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Better-Dev-Team/better-revolt/issues"
    },
    "homepage": "https://github.com/Better-Dev-Team/better-revolt#readme",
    "devDependencies": {
        "electron": "^39.2.7",
        "electron-builder": "^26.4.0",
        "electron-packager": "^17.1.2",
        "jimp": "^1.6.0",
        "png-to-ico": "^2.1.8"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "sharp": "^0.34.5"
    }
}
